{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      // Resolve modules imported in `tests/`
      "@rom98m/utils": ["./dist/index.d.ts"]
    },
  },
  "files": ["src/index.ts"],
}
